{
  "name": "fixialo-backend",
  "version": "1.0.0",
  "description": "Backend API para Fixialo",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "postbuild": "npm run migrate || true",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "migrate": "node migrate.js",
    "migrate:down": "node-pg-migrate down",
    "seed": "ts-node seeds/index.ts"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.0",
    "mercadopago": "^2.0.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.0",
    "node-pg-migrate": "^6.2.0",
    "nodemailer": "^6.9.0",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "typescript": "^5.8.3",
    "uuid": "^9.0.0"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.0",
    "@types/pg": "^8.10.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0"
  }
}
